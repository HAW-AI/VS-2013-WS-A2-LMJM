#!/usr/bin/env escript
%%! -sname vsnode -setcookie lmjm


-compile(node_start).
-compile(util).
-compile(node).

main([Path]) ->
  io:format("reading conf files from ~p~n", [Path]),
  {ok, Files} = file:list_dir(Path),

  lists:foreach(
    fun(File) ->
        FileName = Path ++ "/" ++ File,
        node_start:main(FileName)
    end,
    Files
   ),

  timer:sleep(200),
  global:whereis_name(node_0) ! wakeup,
  global:whereis_name(node_1) ! wakeup,
  global:whereis_name(node_2) ! wakeup,
  global:whereis_name(node_3) ! wakeup,
  global:whereis_name(node_4) ! wakeup,

  io:fread("", "~c").
