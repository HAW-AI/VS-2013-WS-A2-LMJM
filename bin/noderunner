#!/usr/bin/env escript
%%! -sname vsnode -setcookie lmjm


-compile(node_start).
-compile(util).
-compile(node).

main([Path]) ->
  io:format("reading conf files from ~p~n", [Path]),
  {ok, Files} = file:list_dir(Path),

  lists:foreach(
    fun(File) ->
        FileName = string:concat(Path, string:concat("/", File)),
        node_start:main(FileName)
    end,
    Files
   ),
  io:fread("", "~c").
